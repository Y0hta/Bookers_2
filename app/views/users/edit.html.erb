<div class="container">
  <div class="row justify-content-center">
    <div class="col-8">
      <h2>User Info</h2>
      <!-- error_messages -->
      <% if @user.errors.any? %>
        <div id="error_explanation">
          <h2><%= @user.errors.count %>件のエラーが発生しました。</h2>
          <ul>
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <!-- form_for section -->
      <%= form_for(@user) do |f| %>
        <div class="field">
          <%= f.label :username %><br />
          <%= f.text_field :username, class: "name" %>
        </div>

        <div class="field">
          <div class="user-edit-image">
            <%= attachment_image_tag @user, :image, :fill, 60, 60, fallback: "no_image.jpg"%>
          </div>
          <%= f.label :image %><br>
          <%= f.attachment_field :image, placeholder: "profile_image", class: "user_image" %>
        </div>

        <div class="field">
          <%= f.label :introduction %><br />
          <%= f.text_area :introduction, class: "introduction" %>
        </div>

        <div class="actions">
          <%= f.submit "Update Profile", class: "btn btn-outline-dark" %>
        </div>
      <% end %>
      <!-- form_for section end -->
    </div>
  </div>
</div>
